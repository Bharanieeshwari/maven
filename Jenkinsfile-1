pipeline {
    agent {
    node {
        label 'ecsagent'
    }
}

    stages {

        stage('Build Java-Web-Application') {
            steps {
                sh 'sudo su -'
                sh 'apt-get install -y apt-transport-https ca-certificates curl software-properties-common'
                sh 'curl -fsSL https://download.docker.com/linux/ubuntu/gpg | sudo gpg --dearmor -o /usr/share/keyrings/docker-archive-keyring.gpg'
                sh 'echo "deb [arch=amd64 signed-by=/usr/share/keyrings/docker-archive-keyring.gpg] https://download.docker.com/linux/ubuntu $(lsb_release -cs) stable" | sudo tee /etc/apt/sources.list.d/docker.list'
                sh 'apt-get update'
                sh 'apt-get install -y docker-ce docker-ce-cli containerd.io'
                sh 'docker build -t dishoneprabu/java-web-app:latest .'

            }
        }
    }

    post {
        always {
            echo 'Build Completed'
        }
    }
}